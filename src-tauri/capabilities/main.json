{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "additional permissions not defined in default.json",
  "windows": ["main"],
  "permissions": [
    "fs:write-all",
    "fs:allow-open",
    "fs:allow-seek",
    "fs:read-all",
    "fs:allow-watch",
    "core:window:allow-set-title",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPCONFIG/**/*"
        },
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPDATA"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**"
        },
        {
          "url": "http://**"
        }
      ]
    },
    "fs:default"
  ]
}
